= form_for @test_haml do |f|
  - if @test_haml.errors.any?
    #error_explanation
      %h2= "#{pluralize(@test_haml.errors.count, "error")} prohibited this test_haml from being saved:"
      %ul
        - @test_haml.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :
    = f.text_field :
  .field
    = f.label :haml_int
    = f.text_field :haml_int
  .field
    = f.label :haml_float
    = f.text_field :haml_float
  .field
    = f.label :haml_text
    = f.text_area :haml_text
  .actions
    = f.submit 'Save'
